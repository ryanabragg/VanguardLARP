{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": [
    "node",
    "react"
  ],
  "extends": [
    "google",
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
